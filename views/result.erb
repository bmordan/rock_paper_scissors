<hgroup><%= @winner.first['player'] %> Wins!</hgroup>
  <% if @result != "Draw" %>
    <section>
      <% img = @result.split(' ') %>
      <img src="/images/<%= img[0] %>.svg" class="gesture-image-win">
      <img src="/images/<%= img[2] %>.svg" class="gesture-image-lose">
    </section>
  <% end %>
<hgroup><%= @result %></hgroup>
  <section>
    <a href="/replay" id="reset"><i class="fa fa-refresh fa-5x"></i></a>
    <a href="/" id="exit"><i class="fa fa-share fa-5x"></i></a>
  </section>